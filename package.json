{
  "name": "hackerflix",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "scripts": {
    "clean": "rimraf dist/",
    "start": "node dist/server.js",
    "build": "npm-run-all -l -s clean build:server build:client",
    "dev": "npm run clean && npm-run-all -l -p dev:server dev:client",
    "dev:client": "webpack --config webpack.development.js --watch",
    "dev:server": "npm run build:server && nodemon",
    "build:client": "webpack --config webpack.production.js",
    "build:server": "babel ./src --out-dir dist/ --ignore ./node_modules,./.babelrc,./nodemon.json,./package.json,./npm-debug.log,./mockups --copy-files && copyfiles -a config/* dist",
    "prepare": "husky install",
    "pretty-quick": "pretty-quick",
    "pre-commit": "pretty-quick --staged"
  },
  "engines": {
    "node": ">= 16.15.0"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@glidejs/glide": "^3.5.2",
    "config": "^3.3.7",
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "googleapis": "^107.0.0",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.7",
    "redis-om": "^0.3.6",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.13",
    "@babel/node": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "babel-loader": "^8.2.5",
    "copy-webpack-plugin": "^11.0.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "husky": "^8.0.1",
    "mini-css-extract-plugin": "^2.6.1",
    "node-sass": "^7.0.3",
    "node-sass-middleware": "^1.0.1",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "redis": "^4.3.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^13.0.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  }
}
